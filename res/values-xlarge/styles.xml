<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="label" parent="@android:style/Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    	<item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- Dice Grid -->
    <style name="dice_grid" parent="@android:style/Widget.GridView">
        <item name="android:numColumns">8</item>
    </style>

    <!-- Recent Picks -->
    <style name="recent_pick_button" parent="label">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Action Buttons -->
    <style name="action_button" parent="label">
		<item name="android:textSize">30sp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <!-- Dice Set List Item -->
    <style name="dice_set_item" parent="label">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="dice_set_list_item" parent="dice_set_item"></style>

    <style name="dice_set_list_item_container" parent="dice_set_list_item">
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="dice_set_list_item_name" parent="dice_set_list_item">
        <item name="android:padding">2dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="dice_set_list_item_image" parent="dice_set_list_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
    </style>

    <!-- Gallery -->
    <style name="gallery_title" parent="@android:style/Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    	<item name="android:textSize">32dp</item>
        <item name="android:textColor">#FF0</item>
    </style>

	<style name="gallery_grid" parent="@android:style/Widget.GridView">
    	<item name="android:horizontalSpacing">6dp</item>
	    <item name="android:numColumns">4</item>
    	<item name="android:scrollbarAlwaysDrawHorizontalTrack">true</item>
    	<item name="android:verticalSpacing">3dp</item>
	</style>
    
</resources>