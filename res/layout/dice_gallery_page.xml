<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/gallery_width"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal|top"
    android:background="@drawable/semitransparent_gradient_inverted"
    android:gravity="top"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dice_gallery_page_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/dummy_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <GridView
        android:id="@+id/dice_gallery_page_grid"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:numColumns="4"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:verticalSpacing="2dp" >

        <!-- Preview: listitem=@android:layout/simple_list_item_1 -->
    </GridView>

</LinearLayout>

